<!doctype html>
<html lang="en-US">
  <%- include("head.ejs") %>
  <body>
    <h1>Sign up now!</h1>
    <%- include("errors.ejs") %>
    <form action="/sign-up" method="post">
      <label for="firstname">
        <input
          type="text"
          name="firstname"
          id="firstname"
          placeholder="between 1 and 10 characters"
          required
        />
        <span>First name</span>
      </label>
      <label for="lastname">
        <input
          type="text"
          name="lastname"
          id="lastname"
          placeholder="between 1 and 10 characters"
          required
        />
        <span>Last name</span>
      </label>
      <label for="username">
        <input
          type="text"
          name="username"
          id="username"
          placeholder="between 1 and 10 characters"
          required
        />
        <span>Username</span>
      </label>
      <label for="email">
        <input type="email" name="email" id="email" required />
        <span>email address</span>
      </label>
      <fieldset>
        <label for="password">
          <input
            type="password"
            name="password"
            id="password"
            placeholder="between 6 and 16 characters"
            required
          />
          <span>Password</span>
        </label>
        <label for="confirmPassword">
          <input
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            placeholder="must match the password"
            required
          />
          <span>Confirm password</span>
        </label>
      </fieldset>
      <button type="submit">Sign up!</button>
    </form>
  </body>
</html>
